FROM codenvy/javascript_html
ENV CODENVY_APP_BIND_DIR /var/www/html

RUN sudo apt-get update && sudo apt-get upgrade -y
RUN sudo apt-get install git libssl-dev openssl nano wget curl build-essential dnsutils -y
RUN curl -sL https://deb.nodesource.com/setup_4.x | sudo bash -
RUN sudo apt-get install nodejs -y
RUN sudo apt-get install aptitude -y
RUN sudo aptitude -y install ssh
RUN sudo aptitude -y install openssh-client


EXPOSE 22 88 443 1000
VOLUME ["/var/www/html"]
